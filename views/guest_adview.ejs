<!Doctype html>

<html>
    <head>
        <link rel="stylesheet" href="style.css">
       
        <title><%=title%></title>
    </head>
    <body>
    
        
        <h2>Advertisement Details for <%=addet.title%></h2>
       
        <table>

            <table class="mytable">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Title </th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Time Created</th>
                    </tr>
                </thead>
                <tbody>
        
                    <tr>
                        <% var imgageUrl = "/media/"+addet._id+"."+addet.image%>
                            <td>
                                <img src=<%=imgageUrl%>>
                            </td>
                        <td>
                            <%=addet.title%>
                        </td>
                        <td>
                            <%=addet.description%>
                        </td>
                        <td>
                            <%=addet.price%>
                        </td>
                        <td>
                            <%=addet.createdDateTime%>
                        </td>
                    </tr>
                </tbody>
            </table>
        
            <br>

            <div class="member">
                <p style="font-weight: bold;background-color:  rgb(10, 8, 156);color: white;height: 30px; margin-top: 22px;"> Seller  </p>
                <p><strong>Name  </strong>
                    <%=memberData.name%>
                </p>
                <p><strong>Email </strong>
                    <%=memberData.email%>
                </p>
                <p><strong>Location </strong>
                    <%=memberData.location%>
                </p>
               <button class="buttonK" onclick="window.location.href = '/guest/contactMember/<%=memberData._id%>/';">Contact Seller</button>
                 
             </div>
         
            <button class="button" id="logout"  onclick="window.location.href = '/guest/viewallads';">
                All Advertisements
            </button>
        </body>
