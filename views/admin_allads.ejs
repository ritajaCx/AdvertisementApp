    <body>
        <h1> AdManager</h1>
        
        <h2>Advertisement Dashboard</h2>
           <div class="box">
                
            <% if(taskData.length> 0 )
                {
                taskData.forEach(function (data){
                %>
                
                    <% var imgUrl = "/media/"+data._id+"."+data.image%>
                    <div class="boximg">
                        <img style="width:200px;height:200px; border:4px solid rgb(188, 245, 124);" src=<%=imgUrl%>><br>
                        <p> <%= data.title %></p><br> 
                        Price : <%= data.price %><br>
                        Posted On :  <%=data.createdDateTime%><br><br>
                        
                        <button class="buttonK" id="add" onclick="window.location.href = '/admin/viewaddet/<%=data._id%>';">
                            Request for Details
                         </button>
                        
                    
                    </div> 
                <% 
             }) 
               }
            %>
            </div>
        
        <br>
        
     
    </body>
