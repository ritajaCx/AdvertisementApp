<html>
    <head>
        <title>Admin Form Req Details</title>
    </head>
    <body>
        <center>
        <H1> Contact the Seller </H1>
        <div class="form">
            <form action="/admin/sendmail" method="post">
                
                <input type="hidden" name="memid" value="<%=memberData._id%>" required="required" />
                <input type="hidden" name="adid" value="<%=adData._id%>" required="required" />
                <input type="hidden" name="name" value="<%=memberData.name%>" required="required" />
                <label  >Product</label><br>
                <input  name="title" value="<%=adData.title%>" required="required" /><br><br>
                <label > Seller Email</label><br>      
                <input type="text" name="email" value="<%=memberData.email%>" readonly /><br><br>
                <label > Draft Message</label><br> 
                <input type="text" name="message" class="msgbox" placeholder="your message here" required="required" />  <br><br>
                <br><br><br>   <br><br> 
                <button type="submit" class="button">Send Mail</button>
            
            </form>
        </div>
        </center>
    </body>
