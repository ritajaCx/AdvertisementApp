    <title>Update Personal Details</title>
</head>
<body>
    <h2 style="text-align: center;"> Update Personal Details </h2>
    <center>
    <form action="/member/updateprofile" method="POST">
      
            
            <input type="hidden" name="id" value="<%=data._id%>" required="required" />
            <label> Name </label>
            <input type="text" name="name" value="<%=data.name%>" required="required" /><br><br>
            <label> Email </label>
            <input type="email" name="email" value="<%=data.email%>" required="required" /><br><br>
            <label> Govt ID </label>
            <input type="text" name="govtid" value="<%=data.govtid%>" required="required" /><br><br>
            <label> location </label>
            <input type="text" name="location" value="<%=data.location%>"  /> <br><br>
            <label> Address </label>
            <input type="text" name="address" value="<%=data.address%>" required="required" /><br><br>
            <label> PIN Code </label>
            <input type="text" name="pincode" value="<%=data.pincode%>" required="required" /> <br><br>
            <label> Contact </label>
            <input type="number" name="contact" value="<%=data.contact%>" required="required" /> <br><br><br><br>    
            <button type="submit" class="button">Update</button>
    </form>
    </center>
</body>
