<!Doctype html>

<html>
    <head>
        <link rel="stylesheet" href="style.css">
        <title>Admin All Member View Page</title>
    </head>
    <body>
        <h1>Registered Members</h1>
        
        <h2>Admin Dashboard</h2>
        <center>
        <table class="mytable">
            <thead>
                <tr>
                    <th>Name </th>
                    <th>Email ID</th>
                    <th>Location</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <%
                if(memberData.length > 0 )
                {
                    memberData.forEach(function (dt){
                        %>
                        <tr>
                            <td><%=dt.name%></td>
                            <td><%=dt.email%></td>
                            <td><%=dt.location%></td>
                            <td><a href="/admin/viewmemdet/<%=dt._id%>"> View Seller Details </a></td>
                    
                           
                        </tr>
                        <%
                    })
                }
                %>
            </tbody>
        </table>
    </center>
        <br>
        <button class="button" id="add" style="position: fixed;" onclick="window.location.href = '/admin/viewads';">
            View Posted Advertisements
        </button>
        <!-- <button class="button" id="logout"  onclick="window.location.href = '/admin/logout';">
            Logout
        </button> -->
    </body>
    <style>
  
