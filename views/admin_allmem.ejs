<!Doctype html>

<html>
    <head>
        <link rel="stylesheet" href="style.css">
        <title>Admin All Member View Page</title>
    </head>
    <body>
        <h1>Registered Members</h1>
        
        <h2>Admin Dashboard</h2>
        <table class="mytable">
            <thead>
                <tr>
                    <th>Name </th>
                    <th>Email ID</th>
                    <th>Location</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <%
                if(memberData.length > 0 )
                {
                    memberData.forEach(function (dt){
                        %>
                        <tr>
                            <td><%=dt.name%></td>
                            <td><%=dt.email%></td>
                            <td><%=dt.location%></td>
                            <td><a href="/admin/viewmemdet/<%=dt._id%>"> View Personal Details </a></td>
                    
                           
                        </tr>
                        <%
                    })
                }
                %>
            </tbody>
        </table>
        <br>
        <button class="button" id="add" onclick="window.location.href = '/admin/viewads';">
            View Posted Advertisements
        </button>
        <button class="button" id="logout" onclick="window.location.href = '/admin/logout';">
            Logout
        </button>
    </body>
    <style>
  
        * { -webkit-box-sizing:border-box; -moz-box-sizing:border-box; -ms-box-sizing:border-box; -o-box-sizing:border-box; box-sizing:border-box; }
              
              html { width: 100%; height:100%; overflow:hidden; }
              
              body { 
                width: 100%;
                height:100%;
                font-family: 'Times New Roman', Times, serif;
               
              }
          h1 {
              margin-top: 10px;
              padding-top: 1%;
              width: 100%;
              background-color: rgb(188, 245, 124);
              text-align: center;
              color: black;
              height: 50px;
              margin: 0px 0px 0px 0px;
              font-family: 'Times New Roman', Times, serif;
      
          }
          h2 {
              width: 100%;
              background-color: rgb(10, 8, 156);
              text-align: center;
              color:white;
              height: 50px;
              padding-top: 1%;
              margin: 0px 0px 0px 0px;
              font-family: 'Times New Roman', Times, serif;
      
          }
      
          .mytable {
              border-collapse: collapse;
              width: 100%;
              table-layout: fixed;
          }
      
          
          td {
              border: 1px solid black;
              height: 40px;
              text-align: center;
              font-family: 'Times New Roman', Times, serif;
          }
          button{
            background-color: rgb(11, 90, 81);
            color: white;
            text-shadow: gray 2px 2px;
            font-weight: bold;
            font-family: 'Times New Roman', Times, serif;
            height: 40px;
            border: none;
          
        }
          
          th {
              border: 1px solid black;
              height: 40px;
              background-color: rgb(9, 194, 194);
          }
          tbody tr {
              background-color: #f2f2f2;
              padding: 10%
          }
            
          b{
            padding: 10px;
                background-color: darkblue;
                color: white;
                text-shadow: 2px 2px gray;
          }
            a{
                padding: 10px;
                background-color: rgb(133, 7, 7);
                color: white;
                
            }
      
      </style>
</html>