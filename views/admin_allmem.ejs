              html { width: 100%; height:100%; overflow:hidden; }
              
              body { 
                width: 100%;
                height:100%;
                font-family: 'calibri';
                background-color: rgb(52, 139, 103);
               
              }
          h1 {
              margin-top: 10px;
              padding-top: 1%;
              width: 100%;
              text-shadow: darkgray 2px 1px;
              text-align: center;
              color: white;
              height: 50px;
              margin: 0px 0px 0px 0px;
              font-family: 'calibri';

      
          }
          h2 {
              width: 100%;
              text-shadow: darkgray 2px 1px;
              text-align: center;
              color:rgb(10, 46, 31);
              height: 50px;
              padding-top: 3%;
              margin: 0px 0px 0px 0px;
              font-family: 'calibri';
      
          }
      
          .mytable {
              border-collapse: collapse;
